{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "lib": [ "dom", "es6" ],
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    // "sourceRoot": "",
    // "inlineSourceMap": true,
    // "inlineSources": true,
    "target": "es6",
    "types": [ "jasmine" ],
    //    "outDir": "wwwroot",
    "jsx": "react",
    "jsxFactory": "xania.tag",
    "moduleResolution": "node"
  },
  "include": [
    "wwwroot/src/*.ts",
    "wwwroot/src/**/*.tsx",
    "wwwroot/diagram/**/*.tsx",
    "wwwroot/layout/**/*.tsx",
    "wwwroot/spec/*Spec.ts",
    "wwwroot/sample/**/*.ts",
    "wwwroot/sample/**/*.tsx",
    "wwwroot/admin/**/*.ts",
    "wwwroot/admin/**/*.tsx",
    "wwwroot/home/**/*.ts",
    "wwwroot/home/**/*.tsx"
  ],
  "exclude": [
    "wwwroot/xania"
  ]
}
