{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [ "dom", "es6" ],
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "removeComments": true,
    // "sourceMap": true,
    // "sourceRoot": "",
    "inlineSourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "types": [ "jasmine" ],
//    "outDir": "wwwroot",
    "jsx": "react",
    "jsxFactory": "xania.tag"
  },
  "include": [
    "wwwroot/src/*.ts",
    "wwwroot/src/*.tsx",
    "wwwroot/diagram/**/*.tsx",
    "wwwroot/layout/**/*.tsx",
    "wwwroot/spec/*Spec.ts",
    "wwwroot/sample/**/*.ts",
    "wwwroot/sample/**/*.tsx",
    "wwwroot/admin/**/*.ts",
    "wwwroot/admin/**/*.tsx"
  ]
}
