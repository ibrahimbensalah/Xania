{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [ "dom", "es6" ],
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "removeComments": true,
    // "sourceMap": true,
    // "sourceRoot": "",
    "inlineSourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "types": [ "jasmine" ],
    "outDir": "wwwroot",
    "jsx": "react",
    "jsxFactory": "Xania.tag"
  },
  "exclude": [
    "src/fsharp.peg.ts"
  ],
  "include": [
    "grammar/fsharp.d.ts",
    "src/*.ts",
    "spec/*Spec.ts",
    "sample/**/*.ts",
    "sample/**/*.tsx"
  ]
}
